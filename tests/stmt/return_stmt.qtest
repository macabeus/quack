%%describe
Supports formatting return statements
%%source
fn doubleN(x)
  ^ &(* 2)(x)
end
fn retSmth(smth)
  ^ smth <> nil then smth else nil
end
fn recursive(n)
  if n < 1
    ^ 0
  else
    ^ n + recursive(n - 1)
  end
end
